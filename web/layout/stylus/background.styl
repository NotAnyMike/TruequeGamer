html
	height 100%

body
	color: #009992
	display: flex
	flex-direction: column
	font-family: 'Cabin', sans-serif
	height 100%
	margin 0

#mainContainer
	height: 100%

#semi_body
	background radial-gradient(circle, #FFF3D7, #E9C699)
	color: #009992
	display: flex
	flex-direction: column
	font-family: 'Cabin', sans-serif
	height 100%
	margin 0

a
	font-style: italic
	color: #009992
	text-decoration: none
	font-size: 20px

/****** Decorators *******/

.arrow-decorator, .dot-decorator
	&:after, &:before
		font-size: 7px
		position: relative
		bottom: 4px
		font-family: TruequeGamer
		font-style: normal
		color: $orange 

.arrow-decorator
	&:after
		padding-left: 5px
		content: "\e901"
		font-size: 10px
		bottom: 2px

.dot-decorator
	&:before
		padding-right: 5px
		content: "\e900"

.negative
	.dot-decorator,.arrow-decorator
		&:before,&:after
			color: white

/******** End Decorators *******/
