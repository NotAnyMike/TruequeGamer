.detailsMainContainer
	.container
		.title
			font-size: 15px
			border: 0

			&:after
				content: ''
			
			span
				padding-left: 50px

				span
					font-size: 20px
					font-weight: bold
					padding-left: 0

		.gameList
			il
				height: auto
				min-height: 310px
				position: relative

				figure
					position: relative

					.info
						position: absolute
						height: 40px
						width: 40px
						top: 0
						right: 0
						border-top: 20px solid white
						border-left: 20px solid transparent
						border-right: 20px solid white
						border-bottom: 20px solid transparent
						box-sizing: border-box
						transition: border $time
						z-index: 3

						span
							background-color: $red
							display: inline-block
							border-radius: 10px
							height: 20px
							width: 20px
							margin-top: -18px
							margin-left: -2px
							position: absolute

							&:before
								content: 'i'
								display: inline-block
								height: 20px
								width: 20px
								text-align: center

				.contentContainer
					span,div
						padding-top: 0
						padding-bottom: 0
						margin-top: 2px
						margin-bottom: 2px

					.name
						margin-top: 10px

					.exchange
						margin-bottom: 10px
						margin-top: 3px
						position: relative

						.used
							display: none

							&:after
								transition: color $time
								color: white

					.chatButton
						align-items: center
						background-color: $red
						border: 0
						display: flex
						height: 30px
						justify-content: center
						order: 3

						span
							display: inherit

							&:before
								color: white
								content: 'abrir chat'
								font-size: 12px
								text-transform: uppercase

				&:hover
					figure
						.info
							border-top: 20px solid $green_hover_xbox
							border-right: 20px solid $green_hover_xbox

					.contentContainer
						.exchange
							.used
								&:after
									color: white

				&.xboxUsed
					.contentContainer
						.used
							display: inline-block
							position: absolute
							right: 0
							top: -3px

							&:after
								content: 'usado'
								color: $red
								font-size: 12px

				.commentContainer
					position: absolute
					top: 0
					bottom: 30px

					.background,span
						position: absolute
						top: 0
						left: 0
						width: 167px
						height: 100%

					.background
						background-color: $green_hover_xbox
						opacity: .92
						z-index: 2

					span
						z-index: 3
						box-sizing: border-box
						padding: 15px
						font-size: 11px
						padding-right: 20px
						padding-top: 20px
						text-transform: uppercase
						overflow-y: scroll
							
.gameDetails
	border-bottom: 1px solid #fff
	display: flex
	flex-direction: row
	flex-wrap: wrap
	padding: 25px 0
	padding-top: 0
	width: 100%

	hr
		margin: 0
		margin-bottom: 25px
		margin-right: 200px
		width: 100%

	figure
		align-items: center
		border: 2px solid white
		flex-grow: 0
		flex-shrink: 0
		justify-content: center
		height: 200px
		margin: 0
		width: 167px

		img
			height: 180px
			width: 142px
	
	.gameDetailsContainer
		display: flex
		flex-direction: column
		padding-left: 30px

		div:first-child
			flex-grow: 1
			flex-shrink: 1
			position: relative

			&:after
				bottom: 10px
				color: white
				font-size: 25px
				padding: 0
				position: absolute

		span
			color: white
			flex-grow: 0
			flex-shrink: 0
			font-size: 30px
			font-weight: bold
			text-transform: uppercase

			&:nth-child(3)
				flex-grow: .5
			
			&:last-child
				flex-grow: 0
				font-size: 15px
				font-weight: normal
