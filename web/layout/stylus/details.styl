.detailsMainContainer
	.container
		.title
			font-size: 15px

			&:after
				content: ''
			
			span
				padding-left: 50px

				span
					font-size: 20px
					font-weight: bold
					padding-left: 0

.gameDetails
	display: flex
	flex-direction: row
	padding: 25px 0
	width: 100%

	figure
		border: 2px solid white
		flex-grow: 0
		flex-shrink: 0
		height: 200px
		margin: 0
		width: 167px
	
	.gameDetailsContainer
		display: flex
		flex-direction: column
		padding-left: 30px

		div:first-child
			flex-grow: 1
			flex-shrink: 1
			position: relative

			&:after
				bottom: 10px
				color: white
				font-size: 25px
				padding: 0
				position: absolute

		span
			color: white
			flex-grow: 0
			flex-shrink: 0
			font-size: 30px
			font-weight: bold
			text-transform: uppercase

			&:nth-child(3)
				flex-grow: .5
			
			&:last-child
				flex-grow: 0
				font-size: 15px
				font-weight: normal
