/* acá el caso generico (si no es especifica consola es xbox para simplicidad de programación, lo que significa que SIEMPRE se debe especificar consola */

.detailsMainContainer
	.container
		.title
			font-size: 15px
			border: 0

			&:after
				content: ''
			
			span
				padding-left: 50px

				span
					font-size: 20px
					font-weight: bold
					padding-left: 0

		.gameList
			padding-top: 20px

			il
				height: auto
				min-height: 310px
				position: relative

				figure
					position: relative

					.info
						position: absolute
						height: 40px
						width: 40px
						top: 0
						right: 0
						border-top: 20px solid white
						border-left: 20px solid transparent
						border-right: 20px solid white
						border-bottom: 20px solid transparent
						box-sizing: border-box
						transition: border $time
						z-index: 4

						span
							background-color: $red
							display: inline-block
							border-radius: 10px
							height: 20px
							width: 20px
							margin-top: -18px
							margin-left: -2px
							position: absolute
							transition: background-color $time

							&:before
								content: 'i'
								display: inline-block
								height: 20px
								width: 20px
								text-align: center
								transition: color $time

				.contentContainer
					span,div
						padding-top: 0
						padding-bottom: 0
						margin-top: 2px
						margin-bottom: 2px

					.name
						margin-top: 10px

					.exchange
						margin-bottom: 10px
						margin-top: 3px
						position: relative

						.used
							display: none

							&:after
								transition: color $time
								color: white

					.chatButton
						align-items: center
						background-color: $red
						border: 0
						display: flex
						height: 30px
						justify-content: center
						order: 3

						span
							display: inherit

							&:before
								color: white
								content: 'abrir chat'
								font-size: 12px
								text-transform: uppercase

				&:hover
					figure
						.info
							border-top: 20px solid $green_hover_xbox
							border-right: 20px solid $green_hover_xbox

					.contentContainer
						.exchange
							.used
								&:after
									color: white

				&.only
					.contentContainer
						.availableConsoles
							.container
								span
									width: 28px

				&.xboxUsed, &.psUsed
					.contentContainer
						.used
							display: inline-block
							position: absolute
							right: 0
							top: -3px

							&:after
								content: 'usado'
								color: $red
								font-size: 12px
								opacity: 0

				&.xbox
					&.xboxUsed
						.contentContainer
							.used
								&:after
									opacity: 1
				
				&.ps
					&.psUsed
						.contentContainer
							.used
								&:after
									opacity: 1

				
				.commentContainer
					position: absolute
					top: 0
					bottom: 30px
					display:none
					opacity: 0

					.background,span
						position: absolute
						top: 0
						left: 0
						width: 167px
						height: 100%

					.background
						background-color: $green_hover_xbox
						opacity: .92
						z-index: 2

					span
						z-index: 3
						box-sizing: border-box
						padding: 15px
						font-size: 11px
						padding-right: 20px
						padding-top: 20px
						text-transform: uppercase
						overflow-y: scroll
				
				&.showComment
					.commentContainer
						opacity: 1
						display: inline-block

					figure
						.info
							border-top: 20px transparent solid
							border-right: 20px transparent solid
							
							span
								&:before
									content: 'X'
				
			&.both, $.profile
				il	
					figure
						.info
							border-top: 20px solid $dark_green
							border-right: 20px solid $dark_green

							span
								background-color: white
								
								&:before
									color: $dark_green
									font-weight: bold /* just for both */

					.contentContainer
						text-align: left

						.price
							order: 1
							height: 12px

							&:before
								display: none

							span
								width: auto
								margin: 0px 12px
								font-size: 15px
								font-weight: bold
								height:12px
								line-height: normal

						.exchange
							span
								display: none
								width: auto
								position: relative

								&:after
									left: -5px
									top: 0
									color: $darker_green

							&:before, &:after
								padding-right: 0
								bottom: 3px

							&:after
								bottom: 2px

							.used
								bottom: 0
								top: auto
								
								&:after
									color: white
									font-weight: bold

					&.xboxNoExchange, &.psNoExchange
						.contentContainer
							.exchange

								&:before, &:after
									opacity: 1
									color: $darker_green

								span
									&:after, &:before
										display: inline-block

									&:before
										content: "trueque"
					
					&.xbox
						span:nth-child(2)
							display: inline-block

					&.ps
						span:first-child
							display: inline-block

					&:hover
						figure
							.info
								border-top: 20px solid $red
								border-right: 20px solid $red

								span
									&:before
										color: $red

						&.xboxNoExchange, &.psNoExchange
							.contentContainer
								.exchange
									&:before, &:after
										color: white

									span
										&:before, &:after
											color: white

					&.showComment
						figure
							.info
								border-top: 20px transparent solid
								border-right: 20px transparent solid

						.commentContainer
							left: 0

							.background
								background-color: $darker_green
			&.ps
				il	
					.contentContainer
						.exchange
							.used
								&:after
									color: white

					&:hover
						figure
							.info
								border-top: 20px $red solid
								border-right: 20px $red solid

								span
									background-color: white
								
									&:before
										color: $red

					&.showComment
						figure
							.info
								border-top: transparent 20px solid
								border-right: transparent 20px solid

						.commentContainer
							.background
								background-color: $red
								
.gameDetails, .profileDetails
	border-bottom: 1px solid #fff
	display: flex
	flex-direction: row
	flex-wrap: wrap
	padding: 25px 0
	padding-top: 0
	width: 100%

	hr
		margin: 0
		margin-bottom: 25px
		margin-right: 200px
		width: 100%

	figure
		align-items: center
		border: 2px solid white
		flex-grow: 0
		flex-shrink: 0
		justify-content: center
		height: 200px
		margin: 0
		width: 167px

		img
			height: 180px
			width: 142px
	
	.gameDetailsContainer, .profileDetailsContainer
		display: flex
		flex-direction: column
		padding-left: 30px

		div:first-child
			flex-grow: 1
			flex-shrink: 1
			position: relative

			&:after
				bottom: 10px
				color: white
				font-size: 25px
				padding: 0
				position: absolute

		span
			color: white
			flex-grow: 0
			flex-shrink: 0
			font-size: 30px
			font-weight: bold
			text-transform: uppercase

			&:nth-child(3)
				flex-grow: .5
			
			&:last-child
				flex-grow: 0
				font-size: 15px
				font-weight: normal
.both
	.gameDetails, .profileDetails
		border-bottom: solid 1px $dark_green

		hr
			border-top: 1px solid $dark_green

		figure
			border: solid 1px $dark_green

		.gameDetailsContainer, .profileDetailsContainer
			.arrow-decorator
				&:after
					color: $dark_green

			span
				color: $dark_green

			span:nth-child(3)
				flex-grow: 0
				padding-top: 10px

		.gameDetailsContainer
			span:last-child
				display: none
