header, .mainContainer, footer, .decoration
	display block
	width 100%
	flex-shrink: 0

header, footer, .decoration
	flex-grow: 0

.mainContainer,.searchResultsMainContainer, .detailsMainContainer
	flex-grow: 1

header
	display: flex
	justify-content: center
	flex-direction: row
	position: relative

	&:after
		content: ''
		display: inline-block
		position: absolute
		height: 64px
		width: 190px
		background-image: url(./img/header-background-negative.png)
		background-repeat: no-repeat
		background-position: center center
		right: 0
		bottom: -40px
		transform: scaleX(-1)
		filter: FlipV
		opacity: 0
	
	.isotypeContainer
		margin-top: 50px
		width: 470px
		display: flex
		flex-direction: column

	&.negative
		&:after
			opacity: 1

figure
	display: flex
	justify-content: center
	font-size: 17px
	margin: 0 0 15px 0

	.isotype
		&.normal
			display: inline-block
		&.negative
			display: none

	&.negative
		.isotype
			&.normal
				display: none

			&.negative
				display: inline-block

.sloganContainer
	display: flex
	justify-content: center
	font-size: 17px
	margin: 0 0 15px 0
	margin-top: 15px

	span
		padding: 2px
		
	span:nth-child(2)
		position: relative

		span:before
			content: '\e90a'
			font-family: TruequeGamer
			font-weight: bolder
			left:0
			bottom: 3px
			position: absolute

	&.negative
		span
			color: white

.login
	margin-top: 80px
	margin-bottom: auto
	display: inline-block
	width: 215px
	top: 80px
	height: auto

	&.negative
		color: white

.profileContainer
	display: flex
	flex-direction: row
	justify-content: center
	align-items: center
	width: 215px

	figure
		width: 43px
		margin: 0
		height: 43px
		border-radius: 23px
		overflow: hidden

	span
		color: #F29224
		font-size: 20px
		border-bottom: 1px solid $dark_green
		margin: 20px
		overflow: hidden
		white-space: nowrap

	&.negative
		span
			border-bottom: 1px solid white
			color: white

.searchHeaderButtonContainer
	width: 215px
	top: 0px

	div:first-child
		height: 100px
		width: 75px
		background-color: #98CEB7
		position: absolute
		display: flex
		justify-content: center
		align-items: flex-end
		z-index: 3
	
		.searchButtonSubContainer
			position: relative
			bottom: 0
			border-top: 1px solid $dark_green
			height: 70px
			width: 50px
	
	div:nth-child(2)
		position absolute
		top: 100px
		height: 20px
		width:75px
		box-sizing: border-box
		border: 37.5px transparent solid
		border-top: 20px solid #98CEB7
		box-shadow: 0px -5px 0px #98ceb7
		z-index: 2

	.searchButton
		cursor: pointer
		width: 40px
		height: 40px
		position: relative
		bottom: 0px
		border-radius: 20px
		border: none
		background-color: $dark_green
		
		&:before
			content: '\e908'

.mainContainer
	align-items: center
	background-image: url("/img/header-background.png")
	background-repeat: no-repeat
	display: flex
	flex-direction: column
	justify-content: flex-start
		
	.searchFieldContainer
		margin: 15px
		position: relative

		input[type="text"]
			width: 350px
			height: 30px

			&:focus + ul
				display: block
		
		ul
			display: none;
			position: absolute
			top: 0
			left: 0
			margin-top: 28px
			padding: 0
			background: white
			border: 1px solid $dark_green
			border-radius: 0 0 3px 3px
			box-sizing: border-box
			width: 350px
			z-index: 1

			li
				cursor: pointer
				font-size: 15px
				list-style-type: none
				padding: 5px 18px

				&:hover
					background-color: $dark_green
					color: white

			&:hover
				display: inline-block
					
	.filterMainContainer
		/*width: 900px*/
		width: auto

.consoleContainer
	display: flex
	flex-direction: row
	flex-wrap: wrap
	justify-content: center
	margin: 25px 0
	/*min-width: 900px
	width: 100%*/
			
button.consoleCheckbox
	align-items: center
	border: 0px
	background-color: #00605B
	display: flex
	flex-direction: row
	height: 85px	
	justify-content: center
	margin: 2.5px
	position: relative
	transition: background-color $time, opacity $time
	width: 250px

	&:before
		bottom: 0
		color: white
		content: '\e902'
		display: inline-block
		font-family: TruequeGamer
		font-size: 22px
		height: 22px
		opacity: 0
		padding-right: 5px
		position: absolute
		right: 0
		transition: opacity $time
		width: 22px

	&:after
		bottom: 0
		color: $green
		content: '\e90b'
		display: inline-block
		font-family: TruequeGamer
		height: 15px
		position: absolute
		transition: bottom ease $time, color $time
		width: 24px

	.consoleCheckboxContainer
		display: flex
		margin: 0 auto
		width: -moz-fit-content

	&:hover
		&:before
			opacity: .5

		.isotype:before
			color: white

		.consoleNameTitle:before
			color: white
	
	.consoleNameTitle
		flex-grow: 0
		line-height: 30px
		margin: 10px

		&:before
			text-transform: uppercase
			color: $dark_green
			font-size: 15px
			transition: all $time

	&.ps4
		&:after
			left: -44px

		.isotype:before
			content: '\e905'

		.consoleNameTitle:before
			content: 'play station 4'

	&.xboxone
		&:after
			right: -44px
			
		.isotype:before
			content: '\e906'

		.consoleNameTitle:before
			content: 'x-box one'

	.isotype
		background-repeat: no-repeat
		background-position: center center
		display: inline-block
		height: 30px
		flex-grow: 0
		margin: 10px
		width: auto
			
		&:before
			font-family: TruequeGamer
			font-size: 33px
			color: $dark_green
			transition: all 300ms

	&.checked
		background-color: $red

		&:before
			opacity: 1

		&:after
			bottom: 30px
			color: $red

		.isotype:before, span:before
			color: white
			padding: 10px 0px
			
		&:hover
			.isotype:before, span:before
				opacity: 0.5

/******* these will no longer have support ******/
	&.ps3
		.isotype:before
			content: '\e905'

		.consoleNameTitle:before
			content: 'play station 3'

	&.xbox360
		.isotype:before
			content: '\e906'

		.consoleNameTitle:before
			content: 'xbox 360'
