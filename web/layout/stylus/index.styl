.extraFilterContainer
	margin: 10px 0
	display: flex
	flex-direction: row
	justify-content: space-between
	align-items: center
	/*min-width: 900px*/
	
	section
		/*width: 312px*/
		display: flex
		flex-direction: row
		flex-wrap: wrap
		justify-content: center

		&.locationSection
			width: 178px
			display: flex
			flex-direction: row
			justify-content: space-between
			align-items: center

			figure
				border: solid 3px white
				border-radius: 14px
				margin: 0
				padding: 0
				width: 23px
				height: 23px
				overflow: hidden
				cursor: pointer

button.extraFilterButton
	align-items: center
	height: 40px
	background-color: #00605B
	border: 0px
	display: flex
	font-size: 15px
	justify-content: space-between
	flex-direction: row
	margin: 5px
	padding: 0 13px
	transition: all 300ms
	width: 150px

	span
		color: $dark_green
		font-size: 15px
		margin-left: 13px
		transition: all 300ms
		text-transform: capitalize
		flex-grow: 1
		text-align: left
		float: left
		line-height: 24px

	&:hover
		span
			color: white

	input[type="checkbox"]
		display: none

	input[type="checkbox"] 
		& + label
			cursor: pointer
			width: 24px
			display: inline-block
			height: 24px
			border-radius: 0px
			background-color: $dark_green
			border: 0
			margin: 0
			overflow: hidden
			transition: all 300ms
			float: right

		& + label:before
			margin: 0
			width: 24px
			height: 24px
			position: relative
			top: -24px
			left: 0
			content: '\e902'
			font-family: TruequeGamer
			font-size: 22px
			color: white
			transition: all 300ms

	&:hover 
		input[type="checkbox"] + label:before
			top: 0
			margin: 0
			width: 24px
			height: 24px
			position: relative
			left: 0
			content: '\e902'
			font-family: TruequeGamer
			font-size: 22px
			color: white

	&.checked
		background-color: $red
		
		span
			color: white

		input[type="checkbox"] + label
			background-color: $red

			&:before
				top: 0px

	&:hover.checked
		span, input[type="checkbox"] + label:before
			opacity: 0.5

.chatBubble
	position: fixed
	display: flex
	width: 84px
	height: 84px
	border-radius: 42px
	background-color: $dark_green
	bottom: 0
	right: 0
	margin: 20px
	box-sizing: border-box
	cursor: pointer
	z-index: 1

	img	
		width: 42px
		height: 38px
		margin: auto

	.messagesNumber
		position: absolute
		width: 40px
		height: 40px
		border-radius: 20px
		background-color: $red
		color: white

	.messagesNumber
		position: absolute
		width: 40px
		height: 40px
		border-radius: 20px
		background-color: $red
		top: -20px
		left: 20px
		display:flex
		justify-content: center
		align-items: center

		span
			color: white

.chatList
	position: fixed
	right: -420px
	bottom: 0
	height: 100%
	width: 417px
	background: white 
	opacity: 0.99
	z-index: 5
	display: flex
	flex-direction: column

	.container
		display: flex
		flex-direction: column
		height: 100%
		z-index: 2

	&.out
		animation: chatOut 300ms ease forwards

	&.in
		animation: chatIn 300ms ease forwards

	.titleContainer
		background-color: #98CEB7
		width: 100%
		height: 70px
		border-bottom: 4px solid $dark_green
		display: flex
		flex-direction: row
		flex-shrink: 0
		justify-content: center
		align-items: center
		z-index: 2

		span
			text-transform: uppercase
			text-align: center
			font-size: 15px
			margin: 0px 20px
			width: 300px
			padding: 5px

			&:before
				padding: 0 15px
				content: '\e907'
				font-family: TruequeGamer
				color: $dark_green
				font-size: 15px
				
	ul, .chatMessages
		display: flex
		flex-direction: column
		flex-grow: 1
		margin: 0
		overflow-x: hidden
		overflow-y: scroll
		padding: 0
		background-color: white
		z-index: 2

		li
			box-sizing: border-box
			cursor: pointer
			list-style-type: none			
			margin: 0
			border-bottom: 1px solid $green
			display: flex
			flex-direction: row
			flex-shrink: 0
			flex-wrap: wrap
			align-items: center
			justify-content: center
			padding: 20px 10px
			transition: background-color 150ms
			width: 100%			

			&.loading
				display: inline-block
				font-size: 12px
				text-align: center
				transition: opacity 150ms
				opacity: 1

				&.hide
					display: inline-block
					opacity: 0

			figure
				width: 60px
				height: 60px
				border-radius: 30px
				overflow: hidden
				margin: 0
				padding: 0
				box-sizing: border-box

			.content 
				width: 270px
				margin: 0 20px
				display: flex
				flex-direction: row
				justify-content: center
				align-items: center
				flex-wrap: wrap

				.name
					text-transform: capitalize
					color: $darker_green
					font-size: 15px
					flex-grow: 1
					margin: 0 0 10px 0
				
				.time
					font-size: 12px
					color: $green
					margin: 0 0 10px 0

				.messageText
					display: block
					font-size: 11px
					transition: color 150ms
					flex-basis: 100%

			&:hover
				background-color: $dark_green

				.messageText
					color: white

			&.unread
				.messageText
					color: $red
				 
				&:hover
					.messageText
						color: white
	
	.searchArea, .inputArea
		background-color: $dark_green
		box-sizing: border-box
		display: flex
		flex-direction: row
		justify-content: center
		flex-shrink: 0
		align-items: center
		height: 70px
		margin: 0
		padding: 10px 25px
		width: 100%
		z-index: 2

		input
			color: white
			background-color: transparent
			flex-grow: 1
			padding-right: 33px
			transition: all 150ms

			&:focus,&:hover
				background-color: white
				color: $dark_green

		.searchChatButton
			width: 40px
			height: 40px
			background-color: $green
			border: 0px
			border-radius: 20px
			margin-left: 20px

			&:before
				color: $darker_green
				content: '\e908'

		.closeButton
			position: absolute
			right: 95px

button.closeButton
	width: 17px
	height: 17px
	background-image: url(img/x.png)
	background-color: transparent
	background-position: center center
	background-repeat: no-repeat
	border: 0
	margin: 0

.singleChat
	position: absolute
	height: 100%
	width: 416px
	bottom: 0;
	left: 0px
	background-color: white
	display: flex
	flex-direction: column
	flex-grow: 0
	z-index: 1
	visiblity: hidden

	&.out
		animation: singleChatOut 300ms ease 1 forwards
		
	&.in
		animation: singleChatIn 300ms ease 1 forwards

	.inputArea
		position: relative
		bottom: 0
		padding: 15px 10px 15px 20px
		height: auto
		flex-grow: 0
		align-items: flex-start
		
		.text
			display: flex
			align-items: flex-start
			justify-content: flex-start
			background-color: white
			border: 0px
			flex-grow: 0
			cursor: text
			box-sizing: border-box
			outline: none
			border-radius: 3px
			line-height: 25px
			font-size: 18px
			padding: 5px 10px
			box-sizing: border-box
			max-height: 140px
			width: 100%
			overflow-x: hidden
			overflow-y: scroll

			.content
				display: inline-block
				min-height: 25px
				width: 100%
				outline: none

				*
					font-size: inherit !important
					background-color: inherit !important
					color: inherit !important
					width: auto !important
					height: auto !important
					text-decoration: none !important
					border: 0 !important
					margin: 0 !important
					padding: 0 !important
					text-transform: none !important

			.hiddenSpan
				display: none

		button.sendButton
			background-color: $green
			border: 0
			height: 35px
			padding: 9px
			border-radius: 3px
			margin: 0 10px
			
			&:before
				content: 'Send'
				color: $darker_green

	ul
		&.chatMessages
			background-color: $gray
			height: 100%
			flex-direction: column-reverse
			padding: 0px 10px

			li, li:hover
				flex-direction: row
				flex-grow: 0
				justify-content: flex-start
				border: 0
				background-color: transparent
				cursor: default
				padding: 5px
				align-items: flex-start

				figure
					margin: 0
					width: 40px
					height: 40px
					border-radius: 20px

				.message
					background-color: white
					border-radius: 5px
					color: $dark_green
					padding: 15px 30px
					font-size: 12px
					max-width: 260px
					margin-left: 20px
					position: relative

					&:before
						display: inline-block
						width: 10px
						height: 10px
						position: absolute
						top: 15px
						left: -10px
						content: ''
						border-top: 5px transparent solid
						border-bottom: 5px transparent solid
						border-right: 10px white solid
						box-sizing: border-box

				.time
					color: $dark_green
					display: block
					width: 100%
					flex-shrink: 0
					flex-grow: 1
					font-size: 10px
					text-align: right
					margin: 5px 0px

				&.own
					justify-content: flex-end

					figure
						display: none

					.message
						background-color: $dark_green
						color: white
						max-width: inherit

						&:before
							left: inherit
							right: -10px
							border-left: 10px solid $dark_green
							border-right: 0px
