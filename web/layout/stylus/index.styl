/************* animations *************/

@keyframes singleChatOut {
	0%{
		left: -420px
		visibility: visible
	}
	100% {
		left: 0px
		visibility: hidden
	}
}

@keyframes singleChatIn{
	0%{
		left: 0px
		visibility: hidden
	}
	100%{
		left: -420px
		visibility: visible
	}
}

@keyframes chatOut{
	0%{
		right: 0px
		visibility: visible
	}
	100%{
		right: -420px
		visibility: hidden
	}
}

@keyframes chatIn{
	0%{
		right: -420px
		visibility: hidden
	}
	100%{
		right: 0
		visiblity: visible
	}
}
