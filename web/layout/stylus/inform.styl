.inform
	.container
		.title
			.text
				&.sent
					display: none

		.content
			padding: 0px
			display: flex
			justify-content: center
			align-items: center
			flex-direction: column

			span
				padding: 20px

				&.sent
					display: none
					font-size: 18px
					width: 80%
					height: 40px
					padding-bottom: 80px
					padding-top: 40px
					position: relative

					&:after
						content: '\e907'
						font-family: 'TruequeGamer'
						font-size: 40px
						display: inline-block
						height: 40px
						width: 40px
						position: absolute
						bottom: 0
						left: 50%
						margin-left: -20px
				
			div
				width: 100%
				height: 30px
				background-color: $green

				&.textareaContainer
					display: inline-block
					height: auto
					position: relative

					textarea
						width: 100%
						border-radius: 0px
						border: 0px
						background-color: $green
						padding: 20px
						height: 140px
						resize: none
						display: inline-block
						position: relative

				button
					float: right
					font-weight: bold
					color: inherit
					border: 0px
					text-transform: uppercase
					color: $dark_green
					transition: $time color
					background-color: inherit
					padding: 0 20px

					&:hover
						color: $red

	&.sent
		.container
			.title
				.text
					display: none

					&.sent
						display: inline-block

			.content
				height: 200px

				span
					display: none

					&.sent
						display: inline-block

				div
					display: none
