.inform
	.container
		.content
			padding: 0px

			span
				padding: 20px
				
			div
				width: 100%
				height: 30px
				background-color: $green

				&.textareaContainer
					display: inline-block
					height: auto
					position: relative

					textarea
						width: 100%
						border-radius: 0px
						border: 0px
						background-color: $green
						padding: 20px
						height: 140px
						resize: none
						display: inline-block
						position: relative

				button
					float: right
					font-weight: bold
					color: inherit
					border: 0px
					text-transform: uppercase
					color: $dark_green
					transition: $time color
					background-color: inherit
					padding: 0 20px

					&:hover
						color: $red
