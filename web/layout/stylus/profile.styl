.profile
	.container
		.title
			span
				font-size: 20px

		.profileDetails
			.profileDetailsContainer
				span
					display: inline-block

				span
					&:nth-child(3), &:last-child
						font-size: 20px
						font-weight: normal
						padding-top: 20px

				span:last-child
					color: $green
					padding-top: 10px
	
il
	&.new
		cursor: default

		figure
			.img
				background-color: $green
				background-image: url('img/bug.png')
				background-repeat: no-repeat
				background-position: center center
				border: 0px solid white
				position: relative
				width: 140px
				height: 180px
				display: inline-block
				
				div, span
					opacity: 0
					display: inline-block
					position: absolute
					background-color: $red
					color: $white
					width: 100%
					transition: opacity $time

				div
					height: 20px
					padding: 20px 0
					top:0

					&:before
						content: '\e907'
						font-family: TruequeGamer
						display: inline-block
						width: 100%
						height: 100%
						text-align: center

				span
					top: 60px
					bottom: 0px
					text-align: center
					text-transform: uppercase
					font-size: 12px

		.contentContainer
			span
				&.newText
					text-transform: uppercase
					margin: 20px
					text-align: center
					padding-top: 20px !important
					padding-bottom: 30px !important
					border-bottom: 2px solid white

		form
			position: absolute
			top 0
			left 0
			width: 100%
			display: flex
			flex-direction: column
			height: 100%
			padding: 10px
			height: 100%
			padding: 0px
			box-sizing: border-box
			background-color: $dark_green

			.info
				span
					padding: 0
					font-size: 15px
					left: 0

					&:before
						content: 'x'

			span
				text-align: center
				padding: 5px
				padding-top: 10px
				font-size: 12px
			
			div
				&:nth-child(2)
					padding-top: 20px
				
				&:nth-child(3)
					padding-top: 10px

			.publishButton, .cancel
				border: 0
				font-size: 12px
				height: 25px
				position: absolute
				width: 100%

			.cancel
				background-color: $darker_green
				color: $green
				bottom: 27px

			.publishButton
				background-color: $red
				color: white
				text-transform: uppercase
				font-size: 10px
				bottom: 0
				cursor: pointer
				transition: font-size $time

				&:hover
					font-size: 13px

			div
				display: flex
				flex-direction: row
				justify-content: center

				input[type='text']
					width: 145px
					border-radius: 0
					height: 20px
					padding: 2px
					font-size: 10px
					text-transform: uppercase
					margin: 0 10px
					box-sizing: border-box
					background-color: transparent
					border: 1px solid white
					color: white

				input[type="radio"]
					display: none

					&+label
						display: inline-block
						border-radius: 0
						background-color: $darker_green
						height: 27px
						color: $green
						padding: 5px
						width: 73px
						text-align: center
						cursor: pointer
						font-size: 15px
						margin: 0 2.5px
						box-sizing: border-box

					&:checked
						&+label
							background-color: $red
							color: white
					
				&.exchange
					input+label
						text-transform: uppercase

				&.console
					input
						&.ps, &.xbox
							&+label
								height: 27px
								width: 72px
								padding: 0px
								
								&:before
									font-family: TruequeGamer
									font-size: 20px
									margin-top: 3px
									display: inline-block
									cursor: pointer

						&.ps
							&+label
								&:before
									content: '\e905'

						&.xbox
							&+label
								&:before
									content: '\e906'

		&:hover
			figure
				border-top: 2px solid $green !important
				border-right: 2px solid $green !important
				border-left: 2px solid $green !important

				.img
					div, span
						opacity: 1

			.contentContainer
				background-color: $green !important
