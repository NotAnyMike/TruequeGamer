.searchResultsMainContainer
	background-color: white
	flex-grow: 1
	flex-shrink: 0
	padding: 0 20px
	margin: 0

	.container
		align-items: center
		display: flex
		flex-direction: column
		justify-content: center
		margin: 0 auto
		max-width: 1090px
		padding: 0
	
		.title
			align-items: center
			border: 0
			color: white
			display: flex
			font-size: 20px
			height: 40px
			justify-content: flex-start
			padding: 25px 0
			text-transform: uppercase
			width: 100%

			&:before
				content: ''
				display: inline-block
				font-size: 40px
				font-family: TruequeGamer
				height: 40px
				width: 40px

			&:after
				content: ''
				display: inline-block
				margin-left: 60px
		
ul
	align-items: flex-start
	color: white
	cursor: pointer
	display: flex
	flex-direction: row
	flex-wrap: wrap
	justify-content: left
	padding: 0
	max-width: 1050px
	margin-right: -8px
	
	il
		align-items: flex-start
		display: flex
		flex-direction: column
		flex-grow: 0
		height: 340px
		margin-bottom: 34px
		margin-right: 8px
		overflow: hidden
		width: 167px

		figure
			align-items: center
			border-bottom: 0px
			box-sizing: border-box
			display: flex
			flex-shrink: 0
			justify-content: center
			margin: auto
			padding: 8px 0
			transition: border $time
			width: 100%

			img
				height: 180px
				width: 142px

		.contentContainer
			background-color: $dark_green
			box-sizing: border-box
			display: flex
			justify-content: center
			flex-direction: column
			flex-shrink: 0
			flex-grow: 1
			text-align: center
			transition: background-color $time
			width: 100%
	
			.name
				font-size: 15px
				margin: 15px 12.5px 3px 12.5px
				order: 1
				text-transform: uppercase
				transition: color $time

			.exchange
				font-size: 14px
				text-transform: uppercase
				margin: 3px 12.5px 
				order: 2
				position: relative
				
				&:before,&:after
					bottom: 4px
					color: $orange
					font-family: TruequeGamer
					font-size: 5px
					font-style: normal
					position: relative
					transition: color $time, opacity $time

				&:before
					content: '\e900'
					padding-right: 5px

				&:after
					content: '\e901'
					bottom: 1px
					font-size: 7px
					padding-left: 2px

				span
					position: relative
					
					&:before,&:after
						transition: color $time, opacity $time

					&:after
						content: '\e909'
						display: none
						font-family: TruequeGamer
						left: -15px
						position: absolute
						top: 2px

			.availableConsoles
				box-sizing: border-box
				flex-grow: 1
				flex-shrink: 0
				order: 3
				position: relative
				width: 100%

				.container
					border-top: 1px solid white
					box-sizing: border-box
					display: flex
					flex-direction: row
					justify-content: center
					margin: 5px 9px 0px 9px
					
					span
						display: inline-block
						height: 28px
						margin: 6px 7.5px
						width: 36px

						&:before
							color: white
							font-family: TruequeGamer
							font-size: 28px
							opacity: .5
							transition: opacity $time

						&:first-child:before
							content: '\e905'

						&:nth-child(2):before
							content: '\e906'

			.price
				align-items: center
				box-sizing: border-box
				color: white
				display: flex
				flex-grow: 1
				flex-shrink: 0
				font-size: 12px
				height: 30px
				justify-content: center
				order: 4
				padding: 0 12.5px
				position: relative
				text-align: center
				text-transform: uppercase
				transition: color $time, background $time
				width: 100%
					
				&:before
					content: ''
					height: 100%
					left: 0
					opacity: 1
					position: absolute
					transition: opacity 300ms
					top: 0
					width: 100%
					z-index: 0

				span
					transition: color $time
					z-index: 1

			.alsoAvailableOn
				align-items: center
				display: none
				height: 24px
				justify-content: center
				order: 5
				
				span
					font-size: 8px
					border-top: 1px solid white
					margin: 0 12.5px
					padding: 6px 0
					text-transform: uppercase
					transition: border $time
					width: 100%

					&:before
						transition: color $time
				
		&.only
			.availableConsoles
				&:before,&:after
					background-image: url(img/onlyConsoleDecorator.png)
					background-position: center right
					background-repeat: no-repeat
					content: ''
					display: inline-block
					height: 40px
					left: 0
					margin-top: 6px
					opacity: .5
					position: absolute
					width: 15px

				&:after
					filter: FlipH
					left: auto
					right: 0
					transform: scaleX(-1)
					top: 0

			.alsoAvailableOn
				background-color: $red
				border: 0px

				span
					border: 0px

		&.ps
			.availableConsoles
				.container
					span:first-child:before
						opacity: 1

			.price:before
				background: $ps_radial_gradient
				
			&.only
				.availableConsoles
					.container
						span:nth-child(2)
							display: none

		&.xbox
			.availableConsoles
				.container
					span:nth-child(2):before
						opacity: 1

			.price:before
				background: $xbox_linear_gradient

			&.only
				.availableConsoles
					.container
						span:first-child
							display: none

		&.noSell
			.contentContainer
				.price
					span
						&:before,&:after
							transition: color $time, opacity $time

						&:before
							content: 'no venta'
							color: $green
							font-weight: normal
							opacity: .5

						&:after
							content: '\e909'
							color: $green
							font-family: TruequeGamer
							left: 5px
							opacity: .5
							position: absolute
						
/***************************************************************************
														Both section
***************************************************************************/
.searchResultsMainContainer
	&.both
		.title
			color: $dark_green
			border-bottom: 1px solid $dark_green
			
			&:before
				background-image: url(img/smile.png)
				backgronud-position: center center
				background-repeat: no-repeat

			&:after
				content: 'aquí encontrarás juegos de PlayStation y de XBox'

ul.both
	il
		align-items: center

		figure
			border: 2px solid $dark_green
			border-bottom: 0

		.contentContainer
			.exchange								
				span:before
					content: 'trueque'

		&.noExchange
			.contentContainer
				.exchange
					span:before
						color: $darker_green
						content: 'no hay trueque'

					&:before,&:after
						content: ''
						display: none

		&.noSell
			.contentContainer
				.price
					span
						&:after
							display: none
						
		&:hover
			figure
				border: 2px solid $red
				border-bottom: 0px

			.contentContainer
				background-color: $red

				.exchange
					&:before,&:after
						color: white

			&.xbox,&.ps
				.contentContainer
					.price:before
						opacity: 0

			&.noExchange
				.contentContainer
					.exchange
						&:before,&:after
							opacity: .5

						span:before,span:after
							color: white
							opacity: 0.5

