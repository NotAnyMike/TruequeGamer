		&:hover
			figure
				border: 2px solid $green_hover_xbox
				border-bottom: 0

			.contentContainer
				background: $green_hover_xbox
				color: white

				.exchange
					&:before,&:after
						color: white
						
					span
						&:after,&:before
							color: white

				.price
					span
						color: white

				.alsoAvailableOn
					span
						border-top: 1px solid white

						&:before
							color: white

			&.xboxNoSell
				.contentContainer
					.price
						span
							&:before,&:after
								color: white
								opacity: 0.5

			&.xboxNoExchange
