***************************************************************************/

#semi_body.ps
	background: $ps_radial_gradient

.searchResultMainContainer
 	&.ps	
		background-color: transparent

		.container
			.title
				border-bottom: 1px solid white

				&:before
					content: '\e905'

				&:after
					content: 'estás en la sección de play station'

ul.ps
	il
		align-items: left
		height: 310px

		figure
			border: 2px solid white
			border-bottom: 0px

		.contentContainer
			.name
				text-align: left
			
			.availableConsoles
				display: none

			.price
				font-size: 15px
				font-weight: bold
				justify-content: flex-start
				order: 2
				text-align: left
				height: 15px
				
				&:before
					background: transparent

			.exchange
				order: 3
				text-align: left
				padding: 9px 0 3px 0
				font-size: 15px

				span
					&:before
						content: 'trueque'

			.alsoAvailableOn
				display: flex
				order: 4

				span
					border-top: 1px solid $white

					&:before
						content: 'también disponible en xbox one'
						color: white

		&.only
			.contentContainer
				.alsoAvailableOn
					span
						border: 0

						&:before
							content: 'unicamente en play station 4'
							color: white

		&.noExchange
			.contentContainer
				.exchange
					&:before,&:after
						color: $darker_green

					span
						color: $darker_green
					
						&:after
							display: inline-block

		&.noSell
			.contentContainer
				.price
					span
						&:before,&:after
							color: $darker_green	
							opacity: 1

		&:hover
			figure
				border: 2px solid $red
				border-bottom: 0px

			.contentContainer
				background-color: $red

				.exchange
					&:before,&:after
						color: white

			&.noExchange
				.contentContainer
					.exchange
						&:before,&:after
							opacity: .5

						span:before,span:after
							color: white
							opacity: 0.5

			&.noSell
				.contentContainer
					.price
						span
							&:before,&:after
								color: white
								opacity: 0.5

