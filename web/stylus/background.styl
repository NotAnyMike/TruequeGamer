html
	height 100%
body
	height 100%
	margin 0
	background radial-gradient(circle, #FFF3D7, #E9C699)
	font-family: 'Lato', sans-serif
	color: #009992

a
	font-style: italic
	color: #009992
	text-decoration: none
	font-size: 20px

/****** Decorators *******/

.arrow-decorator, .dot-decorator
	&:after, &:before
		font-size: 7px
		position: relative
		bottom: 4px
		font-family: TruequeGamer
		font-style: normal
		color: #F29224

.arrow-decorator
	&:after
		padding-left: 5px
		content: "\e901"
		font-size: 10px
		bottom: 2px

.dot-decorator
	&:before
		padding-right: 5px
		content: "\e900"

/******** End Decorators *******/
